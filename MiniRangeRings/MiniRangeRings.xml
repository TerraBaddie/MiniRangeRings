<Ui xmlns="http://www.blizzard.com/wow/ui/">

  <!--
      IMPORTANT:
      Must be parent="Minimap" (Blizzard’s real frame),
      NOT pfUI.minimap or pfMinimap,
      so zoom updates work correctly.
  -->
  <Frame name="MRR_Frame"
         parent="Minimap"
         frameStrata="LOW"
         hidden="false">
    <!-- Size here does not matter; Lua resizes rings -->
    <Size x="140" y="140"/>
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>

    <Layers>
      <Layer level="OVERLAY">

        <!-- GREEN RING — 41 yards -->
        <Texture name="MRR_GreenRing"
                 file="Interface\AddOns\MiniRangeRings\RingGreen">
          <Size x="128" y="128"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
          <!-- Alpha MUST be set in Lua for pfUI -->
          <Alpha>1.0</Alpha>
        </Texture>

        <!-- ORANGE RING — 36 yards -->
        <Texture name="MRR_OrangeRing"
                 file="Interface\AddOns\MiniRangeRings\RingOrange">
          <Size x="128" y="128"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
          <Alpha>1.0</Alpha>
        </Texture>

        <!-- RED RING — 25 yards -->
        <Texture name="MRR_RedRing"
                 file="Interface\AddOns\MiniRangeRings\RingRed">
          <Size x="128" y="128"/>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
          <Alpha>1.0</Alpha>
        </Texture>

      </Layer>
    </Layers>

  </Frame>

</Ui>
